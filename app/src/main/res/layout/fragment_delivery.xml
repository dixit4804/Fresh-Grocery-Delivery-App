<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.Fragments.FragmentDelivery">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/staticmap" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/destination"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order will be arriving in 15 Min"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/Green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addnnewAddress"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="22dp"
        android:drawablePadding="20dp"
        android:textAlignment="viewStart"
        android:paddingStart="20dp"
        android:layout_marginEnd="22dp"
        android:background="@color/ic_launcher_background"
        android:drawableStart="@drawable/add_new_adress"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/arow"
        android:text="Add new address"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/addressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/addnnewAddress">




      <!-- Sample address item -->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@color/Bisque"
          android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/addressText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Noida Sector 62, B block"
            android:textSize="16sp" />
      </LinearLayout>

      <!-- Sample address item 2-->


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@color/Bisque"
          android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/addressText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Village - babukheda, post- asmoli"
            android:textSize="16sp" />
      </LinearLayout>

      <!-- Sample address item 3-->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@color/Bisque"
          android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/addressText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="IndiCorp It Solutons Pvt Ltd G-5 Noida"
            android:textSize="16sp" />
      </LinearLayout>

      <!-- Sample address item4 -->


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@color/Bisque"
          android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/addressText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Ienergizer Sector 60"
            android:textSize="16sp" />
      </LinearLayout>


    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
